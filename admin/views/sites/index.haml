.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:sites, :index)
      %li=link_to pat(:new), url(:sites, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:sites)
    .inner
      %table.table
        %tr
          %th.first=mat(:site, :id)
          %th=mat(:site, :address)
          %th=mat(:site, :created_at)
          %th=mat(:site, :updated_at)
          %th=mat(:site, :request_type)
          %th=mat(:site, :request_body)
          %th=mat(:site, :response_body)
          %th=mat(:site, :response_code)
          %th.last="&nbsp;"
        -@sites.each do |site|
          %tr
            %td.first=site.id
            %td=site.address
            %td=site.created_at
            %td=site.updated_at
            %td=site.request_type
            %td=site.request_body
            %td=site.response_body
            %td=site.response_code
            %td.last
              =button_to pat(:edit), url(:sites, :edit, :id => site.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:sites, :destroy, :id => site.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
